<?xml version="1.0" encoding="utf-8" ?>
<FlyoutPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="PagesDemo.FlyoutPageDemo"
             Title="FlyoutPageDemo"
            FlyoutLayoutBehavior="Split">
    <FlyoutPage.Flyout>
        <ContentPage Title="My App" BackgroundColor="Blue">
            <Label Text="Hello from Flyout!"
                   HorizontalTextAlignment="Center"
                   VerticalTextAlignment="Center"/>
            </ContentPage>
        </FlyoutPage.Flyout>
    <FlyoutPage.Detail>
        <ContentPage Title="My App" BackgroundColor="Yellow">
            <Label Text="Hello from Detail!"
                   HorizontalTextAlignment="Center"
                   VerticalTextAlignment="Center"/>
            </ContentPage>
        </FlyoutPage.Detail>
</FlyoutPage>
